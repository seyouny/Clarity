{
  "name": "Clarity",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "postinstall": "npm run seed",
    "heroku-postbuild": "npm run build",
    "seed": "cd seeds && node seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eddyangang/Clarity.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eddyangang/Clarity/issues"
  },
  "homepage": "https://github.com/eddyangang/Clarity#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "axios": "^0.20.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "react-router-dom": "^5.2.0",
    "react-speech-recognition": "^3.2.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
